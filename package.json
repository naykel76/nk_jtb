{
    "name": "nk_jtb",
    "description": "Yet another utility based framework.",
    "version": "0.22.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/naykel76/nk_jtb.git"
    },
    "private": false,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "debug": "vite --debug",
        "dev": "concurrently \"vite --open\" \"npm run watch\"",
        "play": "concurrently \"sass --watch --no-source-map ./src/play.scss:dist/css/play.css\" \"code dist/css/play.css\" \"code src/play.scss\"",
        "utils": "concurrently \"sass --watch --no-source-map ./src/utilities.scss:dist/css/utilities.css\" \"code dist/css/utilities.css\" \"code src/utilities.scss\"",
        "watch": "sass --watch --no-source-map ./src/build.scss:dist/css/build.css",
        "lint": "stylelint **/*.scss --fix",
        "lint:report": "stylelint \"**/*.scss\""
    },
    "devDependencies": {
        "autoprefixer": "^10.4.24",
        "concurrently": "^9.2.1",
        "postcss": "^8.5.6",
        "sass": "^1.97.3",
        "stylelint": "^17.3.0",
        "stylelint-config-standard-scss": "^17.0.0",
        "stylelint-order": "^7.0.1",
        "stylelint-scss": "^7.0.0",
        "vite": "^7.3.1"
    },
    "dependencies": {
        "@alpinejs/collapse": "^3.15.8",
        "alpinejs": "^3.15.8"
    }
}
