{
    "name": "nk_jtb",
    "description": "Yet another utility based framework.",
    "version": "0.16.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/naykel76/nk_jtb.git"
    },
    "private": false,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "debug": "vite --debug",
        "dev": "concurrently \"vite --open\" \"npm run watch\"",
        "play1": "sass --watch --no-source-map ./src/play.scss:dist/css/play.css",
        "play": "concurrently \"sass --watch --no-source-map ./src/play.scss:dist/css/play.css\" \"code src/play.scss\" \"code dist/css/play.css\"",
        "watch": "sass --watch --no-source-map ./src/build.scss:dist/css/build.css",
        "lint": "stylelint **/*.scss --fix",
        "lint:base": "stylelint **/base/*.scss --fix"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.1.2",
        "postcss": "^8.5.3",
        "sass": "^1.86.3",
        "stylelint": "^16.21.0",
        "stylelint-config-standard-scss": "^15.0.1",
        "stylelint-order": "^7.0.0",
        "stylelint-scss": "^6.12.1",
        "vite": "^6.2.6"
    }
}
